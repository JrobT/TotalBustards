<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/UnilinkBlue"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/closest_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="Helvetica"
        android:text="Closest to:"
        android:textAlignment="center"
        android:textColor="@color/AppBlack"
        android:textSize="25dp"
        android:textStyle="bold" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context="com.example.sjw2g15.absolutebustard.MapsActivity" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/UnilinkBlue"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/mov_left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="Left"/>
        <Button
            android:id="@+id/mov_up"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="Up"/>
        <Button
            android:id="@+id/mov_down"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="Down"/>
        <Button
            android:id="@+id/mov_right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:text="Right"/>
    </LinearLayout>
</LinearLayout>

